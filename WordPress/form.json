{
  "title": "WordPress on Plesk",
  "description": "Harvest the power of the Plesk WordPress Toolkit. This application comes with a pre-installed WordPress and Plesk instance.",
  "type": "object",
  "required": [
    "domain",
    "user",
    "rootmail",
    "passwd",
    "wpuser",
    "wpusermail",
    "wppasswd",
    "wptitle" 
  ],
  "properties": {
    "license": {
      "title": "Plesk Activation Key (Leave blank if not available)",
      "type": "string",
      "default": " "
    },
    "domain": {
      "type": "string",
      "title": "Domain & Hostname"
    },
    "user": {
      "type": "string",
      "title": "Username",
      "default": " "
    },
    "rootmail": {
      "type": "string",
      "format": "email",
      "title": "Administrators Email"
    },
    "passwd": {
      "type": "string",
      "title": "Password",
      "format": "password",
      "minLenght": 8,
      "help": "At least 1 capital letter, 1 lowercase letter, 2 digits and 2 special chars."
    },
    "wpuser": {
      "type": "string",
      "title": "WordPress Username"
    },
    "wpusermail": {
      "type": "string",
      "title": "WordPress User Email"
    },
    "wppasswd": {
      "type": "string",
      "title": "WordPress Password",
      "format": "password"
    },
    "wptitle": {
      "type": "string",
      "title": "Title for your Wordpress Website"
    }
  }
}